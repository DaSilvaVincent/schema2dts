{
  "name": "schema2dts",
  "version": "4.1.3",
  "description": "A very simple JSONSchema7/OpenAPI3 to TypeScript types definitions generator",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "tags": [
    "jsonschema",
    "openapi",
    "openapi3",
    "typescript",
    "dts",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/schema2dts.git"
  },
  "metapak": {
    "configs": [
      "main",
      "tsesm",
      "jest",
      "readme",
      "eslint",
      "ghactions",
      "jsdocs",
      "coveralls"
    ],
    "data": {
      "files": "'src/**/*.ts'",
      "testFiles": "'src/**/*.test.ts'",
      "distFiles": "'dist/**/*.js'",
      "ignore": [
        "dist"
      ],
      "bundleFiles": [
        "dist",
        "src"
      ]
    }
  },
  "scripts": {
    "build": "rimraf -f 'dist' && tsc --outDir dist",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "npm run jest -- --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md 'dist/**/*.js' >> API.md && git add API.md",
    "jest": "NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest",
    "lint": "eslint 'src/**/*.ts'",
    "metapak": "metapak",
    "precz": "npm run build && npm run lint && npm t && npm run metapak -- -s && npm run doc",
    "prettier": "prettier --write 'src/**/*.ts'",
    "preversion": "npm run build && npm run lint && npm t && npm run metapak -- -s && npm run doc",
    "test": "npm run jest",
    "version": "npm run changelog"
  },
  "author": {
    "name": "Nicolas Froidure",
    "email": "nicolas.froidure@insertafter.com",
    "url": "https://insertafter.com/en/index.html"
  },
  "license": "ISC",
  "dependencies": {
    "@types/json-schema": "^7.0.11",
    "camelcase": "^7.0.1",
    "openapi-types": "^12.1.0",
    "typescript": "^4.9.4",
    "yerror": "^6.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "commitizen": "^4.2.5",
    "conventional-changelog-cli": "^2.2.2",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.6",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.1",
    "jsdoc-to-markdown": "^7.1.1",
    "metapak": "^4.0.5",
    "metapak-nfroidure": "12.3.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "contributors": [],
  "engines": {
    "node": ">=16.15.0"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "bugs": {
    "url": "https://github.com/nfroidure/schema2dts/issues"
  },
  "homepage": "https://github.com/nfroidure/schema2dts#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "typescript",
      "rimraf",
      "jest",
      "coveralls",
      "eslint",
      "eslint-config-prettier",
      "eslint-plugin-prettier",
      "prettier",
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "jsdoc-to-markdown"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true,
          "format": "esm"
        }
      ]
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "script",
      "modules": true
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "*.d.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
